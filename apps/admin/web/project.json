{
  "name": "admin-web",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/admin/web/src",
  "projectType": "application",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "command": "vite",
        "cwd": "apps/admin/web"
      }
    },

    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/admin/web"],
      "defaultConfiguration": "production",
      "options": {
        "command": "vite build",
        "cwd": "apps/admin/web"
      },
      "configurations": {
        "development": {
          "command": "vite build --mode development"
        },
        "staging": {
          "command": "vite build --mode staging"
        },
        "production": {
          "command": "vite build --mode production"
        }
      }
    },

    "preview": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "production",
      "options": {
        "command": "vite preview --port 4173 --mode production",
        "cwd": "apps/admin/web"
      },
      "configurations": {
        "development": {
          "command": "vite preview --port 4173 --mode development"
        },
        "staging": {
          "command": "vite preview --port 4173 --mode staging"
        },
        "production": {
          "command": "vite preview --port 4173 --mode production"
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "netlify deploy --dir=dist/apps/admin/web --prod",
        "cwd": "apps/admin/web"
      },
      "configurations": {
        "staging": {
          "command": "netlify deploy --dir=dist/apps/admin/web --alias=staging"
        }
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p tsconfig.app.json",
        "cwd": "apps/admin/web"
      }
    },

    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/admin/web/**/*.{ts,tsx,js,jsx}"],
        "cache": true
      }
    }
  },
  "tags": ["frontend", "react", "vite"]
}
